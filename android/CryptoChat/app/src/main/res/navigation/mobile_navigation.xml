<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/fragment_login">

    <fragment
        android:id="@+id/navigation_chat"
        android:name="biz.qjumper.client.cryptochat.ui.chat.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_contacts"
        android:name="biz.qjumper.client.cryptochat.ui.contacts.ContactsFragment"
        android:label="@string/title_contacts"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/navigation_security"
        android:name="biz.qjumper.client.cryptochat.ui.security.SecurityFragment"
        android:label="fragment_security"
        tools:layout="@layout/fragment_security" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="biz.qjumper.client.cryptochat.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_navigation_settings_to_fragment_login"
            app:destination="@id/fragment_login"
            app:popUpTo="@id/fragment_login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragment_login"
        android:name="biz.qjumper.client.cryptochat.ui.user.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/fragment_login" />

</navigation>